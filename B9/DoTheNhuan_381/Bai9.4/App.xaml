<Application x:Class="Bai9._4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bai9._4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="textbox" TargetType="TextBox">
            <Setter Property="ItemsControl.Margin" Value="5" />
        </Style>
        <Style x:Key="button" TargetType="Button">
            <Setter Property="ItemsControl.Margin" Value="5" />
            <Setter Property="ItemsControl.MinWidth" Value="60" />
            <Setter Property="ItemsControl.Padding" Value="10,5,10,5" />
        </Style>
    </Application.Resources>
</Application>
