<Application x:Class="Bai9._3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bai9._3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="radionButton" TargetType="RadioButton">
            <Setter Property="ItemsControl.Margin" Value="5" />
        </Style>
        <Style x:Key="checkbox" TargetType="CheckBox">
            <Setter Property="ItemsControl.Margin" Value="5" />
        </Style>
        <Style x:Key="button" TargetType="Button">
            <Setter Property="ItemsControl.Padding" Value="10,0,10,0" />
        </Style>
    </Application.Resources>
</Application>
